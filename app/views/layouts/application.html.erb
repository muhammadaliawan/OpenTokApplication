<!DOCTYPE html>
<html>
  <head>
    <title>Demochat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= include_gon(init: true) %>
    <script src="https://static.opentok.com/v2/js/opentok.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
