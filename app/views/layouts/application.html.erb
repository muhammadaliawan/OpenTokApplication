  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>

  <script type='text/javascript'>
    document.addEventListener('DOMContentLoaded', function () {
      <%= yield :javascript %>
    });
  </script>
</html>
